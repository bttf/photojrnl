<!-- section -->
<section class="about min" id="about">

  <div class="offset">

    <!-- container -->
    <div class="container">

      <!-- row -->
      <div class="row">

        <!-- image -->
        <div class="image six columns">

          <img src="./images/about/image.png" alt="">

        </div>
        <!-- image -->

        <!-- content -->
        <div class="content six columns">

          <div class="story">
            <h3 class="title">Based in {{location}}</h3>
            <p class="text">{{aboutDesc}}</p>
          </div>

          <div class="quote">
            <blockquote>“{{favQuote}}”</blockquote>
          </div>

          <div class="more">
            <a href="contact" class="circle contact"><span>contact me</span></a>
          </div>

        </div>
        <!-- content -->

      </div>
      <!-- row -->

    </div>
    <!-- container -->

  </div>

</section>
<!-- section -->
