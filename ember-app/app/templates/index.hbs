<div class="row">
  {{#each photo in model}}
  <div class="col-sm-4">
    <img class="img-responsive" src={{photo.imgPath}}>
    {{#link-to 'photos.edit' photo class='btn btn-default'}}edit{{/link-to}}
    <a class='btn btn-default' {{action 'deletePhoto' photo}}>delete</a>
  </div>
  {{/each}}
</div>
