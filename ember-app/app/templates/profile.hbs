<div class="container">
  <h1>Edit Profile</h1>
  <form action="">
    <div class="row">
      <div class='col-sm-4'>
        <div class="form-group">
          <label for="">First Name</label>
          {{input class="form-control" type="text" value=model.firstName}}
        </div>
      </div>

      <div class='col-sm-4'>
        <div class="form-group">
          <label for="">Last Name</label>
          {{input class="form-control" type="text" value=model.lastName}}
        </div>
      </div>
    </div>

    <div class="row">
      <div class='col-sm-4'>
        <div class="form-group">
          <label for="">Front-page Subtitle</label>
          {{textarea class="form-control" value=model.subtitle placeholder='Short, brief sentence to go under your name on the main landing page.'}}
        </div>
      </div>

      <div class='col-sm-4'>
        <div class="form-group">
          <label for="">Personal Quote</label>
          {{textarea class="form-control" value=model.favoriteQuote placeholder='A personal quote that you\'d like to share with customers.'}}
        </div>
      </div>
    </div>

    <div class="row">
      <div class='col-sm-4'>
        <div class="form-group">
          <label for="">About Page Description</label>
          {{textarea class="form-control" value=model.aboutDesc placeholder='Describe yourself and your work.'}}
        </div>
      </div>

      <div class='col-sm-4'>
        <div class="form-group">
          <label for="">Contact Page Description</label>
          {{textarea class="form-control" value=model.contactDesc placeholder='Short description on how you\'d like to be contacted.'}}
        </div>
      </div>

      <div class='col-sm-4'>
        <div class="form-group">
          <label for="">Location</label>
          {{input class="form-control" type="text" value=model.location placeholder='Location of your work'}}
        </div>
      </div>
    </div>

    <div class="row">
      <div class='col-sm-4'>
        <div class="form-group">
          <label for="">Instagram Handle</label>
          {{input class="form-control" type="text" value=model.instagram}}
        </div>
      </div>

      <div class='col-sm-4'>
        <div class="form-group">
          <label for="">Facebook</label>
          {{input class="form-control" type="text" value=model.facebook}}
        </div>
      </div>

      <div class='col-sm-4'>
        <div class="form-group">
          <label for="">Twitter Handle</label>
          {{input class="form-control" type="text" value=model.twitter}}
        </div>
      </div>

      <div class='col-sm-4'>
        <div class="form-group">
          <label for="">E-Mail</label>
          {{input class="form-control" type="text" value=model.email}}
        </div>
      </div>

      <div class='col-sm-4'>
        <div class="form-group">
          <label for="">Phone #</label>
          {{input class="form-control" type="text" value=model.phone}}
        </div>
      </div>

      <div class='col-sm-12'>
        <button type='submit' class='btn btn-primary' {{action 'save' model}}>Save</button>
      </div>
    </div>
  </form>
</div>
